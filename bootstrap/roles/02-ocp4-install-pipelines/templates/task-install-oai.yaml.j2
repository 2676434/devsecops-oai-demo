apiVersion: tekton.dev/v1
kind: Task
metadata:
  name: deploy_oai
  namespace: cicd
spec:
  workspaces:
  - name: workspace
  params:
    - name: service_account
      description: The user to deploy OAI
      type: string
      default: kubeadmin
    - name: namespace
      description: The application namespace
      type: string
      default: "default"
  steps:
    - name: deploy_oai
      image: image-registry.openshift-image-registry.svc:5000/openshift/cli:latest
      workingDir: /workspace/workspace
      command: ["/bin/bash", "-c"]
      args:
        - |-
          echo Install OAI deployment in $(inputs.params.namespace) namespace
          oc login -u="kubeadmin" -p="kmYGV-DnGRo-wQywL-muSAF" "https://api.secondary-server.example.com:6443" --insecure-skip-tls-verify
          curl -fsSL -o get_helm.sh https://raw.githubusercontent.com/helm/helm/main/scripts/get-helm-3
          chmod 700 get_helm.sh
          ./get_helm.sh
          helm dependency build OAI-5G-DevSecops/charts/oai-5g-core/oai-5g-basic
          helm install oai-5g-basic OAI-5G-DevSecops/charts/oai-5g-core/oai-5g-basic -n $(inputs.params.namespace) 
          echo -----------------------------------
